{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true, // Generates type declaration files (.d.ts)

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.ts", // Ignore .test.ts files
    "**/*.test.tsx", // Ignore .test.tsx files
    "**/__tests__/**", // Ignore files inside `__tests__` directories
    "node_modules", // Always exclude `node_modules`
    "dist" // Exclude the `dist` directory
  ]
}
